#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@mark.probst/typescript-json-schema/bin/typescript-json-schema" "$@"
  ret=$?
else 
  node  "$basedir/../@mark.probst/typescript-json-schema/bin/typescript-json-schema" "$@"
  ret=$?
fi
exit $ret
